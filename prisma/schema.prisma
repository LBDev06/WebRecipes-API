generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id           String       @id @default(uuid())
  name         String?
  email        String       @unique
  password     String
  created_at   DateTime     @default(now())
  comment      Comment[]
  favorites    Favorite[]
  likes        Like[]
  recipes      Recipes[]
  user_profile UserProfile?
}

model UserProfile {
  id                   String @id @default(uuid())
  bio                  String
  location             String
  experience_level     String
  favorite_ingredient  String
  cooking_specialities String
  userId               String @unique
  user                 User   @relation(fields: [userId], references: [id])
}

model Recipes {
  id                String     @id @default(uuid())
  recipe_title      String
  description       String
  recipe_image      String
  cook_time         String
  servings          String
  ingredients       String[]
  cook_instructions String[]
  userId            String
  comment           Comment[]
  favorites         Favorite[]
  likes             Like[]
  user              User       @relation(fields: [userId], references: [id])
}

model Like {
  userId    String
  recipesId String
  id        String  @id @default(uuid())
  recipes   Recipes @relation(fields: [recipesId], references: [id], onDelete: Cascade)
  user      User    @relation(fields: [userId], references: [id])

  @@unique([userId, recipesId])
}

model Favorite {
  userId    String
  recipesId String
  id        String  @id @default(uuid())
  recipes   Recipes @relation(fields: [recipesId], references: [id], onDelete: Cascade)
  user      User    @relation(fields: [userId], references: [id])

  @@unique([userId, recipesId])
}

model Comment {
  id        String  @id @default(uuid())
  userId    String
  recipesId String
  comment   String
  recipes   Recipes @relation(fields: [recipesId], references: [id], onDelete: Cascade)
  user      User    @relation(fields: [userId], references: [id])
}
